<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Intencje</title>
    <script src="https://kit.fontawesome.com/190892c2b3.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Aboreto&family=Source+Sans+Pro:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/dist/css/hamburger.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/dist/css/main.min.css">

</head>

<body>
    <header class="header__intencja">
        <a href='#' class="header__logo"><i class="fas fa-praying-hands"></i></a>

        <button class="hamburger hamburger--collapse" type="button">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
        <!-- @include 'nav.kit' -->


        <div class="intencja">
            <div class="intencja__img">
                <h1 class="intencja__header">Prześlij intencję z prośbą o modlitwę</h1>
                <!-- <p class="intencja__text">(Wyświetla się ostatnia wysłana intencja)</p> -->
                <div class="containerIntencja">
                    <form class="intencja__form" id="form" onsubmit="return submitFunc()">
                        <input class="intencja__form-group" id="name" type="text" name="name" placeholder="Twoje Imie">
                        <input class="intencja__form-group" type="email" name="email" placeholder="Email" required oninvalid="this.setCustomValidity('Proszę wypełnij to polę. Email jest wymagany.')">
                        <textarea class="intencja__form-group" id="intention" type="text" name="Message"
                            placeholder="Intencja" required></textarea>
                        <button class="intencja__form-btn" id="btn" type="submit" name="button">Wyślij</button>

                    </form>
                </div>
            </div>
        </div>
    </header>

    <main>
        <section class="added">
            <p id="conf"></p>
            <div class="added__intencja" id="taskBoard"></div>        
        </section>
    </main>


    <!-- @include 'footer.kit' -->

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

    <script>
        var taskList = [];

        function loadTasks() {
            if (!localStorage.taskList) {
                return false;
            }
            var newTaskList = JSON.parse(localStorage.taskList);

            for (i = 0; i < newTaskList.length; i++) {

                var noteNode = document.createElement("div");
                var titleNode = document.createElement("h3");
                var pNode = document.createElement("p");
                var descNode = document.createTextNode(newTaskList[i].desc);
                var descNode2 = document.createTextNode(newTaskList[i].name);

                titleNode.appendChild(document.createTextNode('"'));
                titleNode.appendChild(descNode);
                titleNode.appendChild(document.createTextNode('"'));
                titleNode.appendChild(document.createTextNode(" "));
                titleNode.appendChild(descNode2);
                noteNode.appendChild(titleNode);
                noteNode.appendChild(pNode);

                document.getElementById("taskBoard").appendChild(noteNode);
                if (taskBoard.childElementCount > newTaskList.length) {
                    for (n = 0; taskBoard.childElementCount - 1; n++) {
                        taskBoard.removeChild(taskBoard.firstChild);
                    }
                }
            }
        }

        function submitFunc() {
            var task = {
                desc: document.getElementsByTagName("textarea")[0].value,
                name: document.getElementsByTagName("input")[0].value
            };

            taskList[taskList.length] = task;
            localStorage.taskList = JSON.stringify(taskList);
            loadTasks();
            return false;
        }

        loadTasks();


        let childcount = document.getElementById("taskBoard").querySelectorAll('h3').length;

        if (childcount >= 8) {
            let select = document.getElementById('taskBoard');
            select.lastChild.innerHTML = ''
        }

        // const btn = document.getElementById('btn');

        // btn.addEventListener("click", () => { intention.value ? confirm.textContent = 'WYSŁANO' : confirm.textContent = 'JESZCZE RAZ' })

    </script>



    <script src="/dist/js/main.min.js"></script>

</body>

</html>