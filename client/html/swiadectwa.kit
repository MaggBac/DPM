    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
        AOS.init();
    </script>
    <script src="/dist/js/main.min.js"></script>
    <script type="text/javascript">
        fetch('swiadectwa.json')
            .then(function (response) {
                return response.json();
            })
            .then(function (data) {
                appendData(data);
            })
            .catch(function (err) {
                console.log('error: ' + err);
            });

        function appendData(data) {
            let mainContainer = document.getElementById("swiadectwa__wrapper");

            for (let i = 0; i < data.length; i++) {
                let containerDiv = document.createElement("div");
                let h2Main = document.createElement("h2");
                h2Main.classList.add("swiadectwa__header");
                h2Main.innerHTML = data[i].naglowek;

                let pMain = document.createElement("p");
                pMain.classList.add("swiadectwa__text");
                pMain.innerHTML = data[i].text;

                containerDiv.appendChild(h2Main);
                containerDiv.appendChild(pMain);

                mainContainer.prepend(containerDiv);
            }
        }
    </script>

